<h1>Listing hunts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Admin</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hunts.each do |hunt| %>
      <% if hunt.users.include? @current_user %>
        <tr>
          <td><%= hunt.name %></td>
          <td><%= hunt.description %></td>
          <td><%= hunt.admin %></td>
          <% hunt.users.each do |user| %>
            <td><%= user.email %></td>
          <% end %>
          <td><%= link_to 'Show', hunt %></td>
          <td><%= link_to 'Edit', edit_hunt_path(hunt) %></td>
          <td><%= link_to 'Destroy', hunt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hunt', new_hunt_path %>
